{
  "name": "base-api-express-generator",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/bin/www.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec \"node --loader ts-node/esm ./src/bin/www.ts\"",
    "dev:build": "NODE_ENV=development nodemon --exec \"npm run build && node ./dist/bin/www.js\"",
    "prettify": "prettier --write '**/*.{js,ts,json,md}'",
    "lint": "eslint .",
    "lint:ts": "eslint 'src/**/*.{ts,tsx}'",
    "ts:check": "tsc --noEmit",
    "migrate": "migrate-mongo",
    "migrate-dev": "NODE_ENV=development migrate-mongo",
    "check:all": "npm run ts:check && npm run lint:ts && npm run prettify",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "~1.4.7",
    "cors": "^2.8.5",
    "debug": "~4.4.3",
    "dotenv": "^17.2.3",
    "express": "~5.1.0",
    "express-validator": "^7.3.0",
    "figlet": "^1.9.3",
    "jsonwebtoken": "^9.0.2",
    "migrate-mongo": "^12.1.3",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.2",
    "morgan": "~1.10.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.5",
    "@types/figlet": "^1.7.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
